{% extends "base.html.twig" %}

{% form_theme formFilm 'bootstrap_4_layout.html.twig' %}

{% block body %}
        {% if editMode %}
            <h1> Modification d'un film </h1>
        {% else %}
            <h1> Ajout d'un nouveau film </h1>
        {% endif %}


    {{ form_start(formFilm) }}


    {{ form_widget(formFilm) }}

    <button type="submit" class="btn btn-success"> 
        {% if editMode %}
            Enregistrer
        {% else %}
            Ajouter le Film
        {% endif %}
        
    </button>

    {{ form_end(formFilm) }}

{% endblock %}