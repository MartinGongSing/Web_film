{% extends 'base.html.twig' %}

{% block title %}Titres{% endblock %}

{% block body %}
    <section class="film">
        <h1>Films</h1>
        {# <p> Dans index.html.twig</p> #}
        <p>Search bar : CTRL + F</p>
    
    {% for film in films %}
        <p> {{ film.Number}} </p>
        <h2> {{ film.Title }} , {{ film.Year}} </h2>
        <h3> {{ film.thema.name}}  </h3>
        <h4> {{ film.Actor}} <br> </h4>     
        <a href="/title/{{film.id}}/edit" class="btn btn-light"> Modifier </a>
        <br><br>
        
    {% endfor %}

    </section>


{% endblock %}
